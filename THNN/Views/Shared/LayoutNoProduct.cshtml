<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/assets/css/food.css" />
    <link rel="stylesheet" href="~/assets/css/base.css" />
    <link rel="stylesheet" href="~/assets/css/response.css" />
    <link rel="stylesheet" href="~/assets/css/infor.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/font/fontawesome-free-6.2.1-web/css/all.min.css" />
    @RenderSection("linkcss", false);
    <title>Food</title>
    <style>
        .header_head-name {
            width: 200px;
        }

    @RenderSection("Style", false)

    </style>
</head>
<body>
    <div class="food">

        @Html.Partial("~/Views/Shared/Partial/HeaderTablePartial.cshtml")

        <div class="header">
            <a href="~/Home" class="header__logo">
                <img src="~/assets/img/logo/logo.png"
                     alt="Logo" />
            </a>
            <div class="header__search">
                <form action="~/Home/SearchAction" method="post">
                    <input autocomplete="off" class="header__search-input" type="text" name="search" method="post" placeholder="Tìm kiếm sản phẩm ...." />
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                    <div class="header__search-history">
                        <h3 class="header_history-head">Lịch sử tìm kiếm</h3>
                        @RenderSection("render_history_search", false)
                    </div>
                </form>
            </div>
            @Html.Partial("~/Views/Shared/Partial/HeaderAnotherInfoPartial.cshtml")

        </div>
        @Html.Partial("~/Views/Shared/Partial/SiderBarPartial.cshtml")



        <div class="content">
            @RenderSection("NoContainer", false);
            <div class="container">
                @RenderBody()
            </div>
            @RenderSection("AnotherBox", false);
        </div>


        @Html.Partial("~/Views/Shared/Partial/FooterPartial.cshtml")

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <script src="~/assets/js/toast.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @if (Session["User"] != null)
    {
        <script>
         var listDeleteAddProduct = document.querySelectorAll(".header_body-del");
         var boughtLists = document.querySelector(".header__bought-list");
         var noBought = document.querySelector(".header__no-cart");
         var quatityBoughtList = document.querySelector(".header__cart-notice.listBuyProduct");
         var quantityBoughtProduct = boughtLists.children.length;





         //Nếu hết sản phẩm thì chuyển sang phần ko còn sản phẩm
         if (quantityBoughtProduct > 0) {
             var parentElement = boughtLists.parentNode;
             parentElement.classList.add("active");
             noBought.classList.remove("active");
         }
         else {
             parentElement.classList.remove("active");
             noBought.classList.add("active");
         }

         // Hiển thị số lượng ban đầu
         quatityBoughtList.textContent = quantityBoughtProduct;

         //Xóa sản phẩm không muốn mua nữa
         listDeleteAddProduct.forEach((item) => {
             item.addEventListener("click", () => {
                 var listItem = item.closest(".header__bought-item");

                  @{ var listBuyKH = Session["getListBuyKH"] as List<THNN.Models.SP_LH_DDH_CTDDH>;
                      var MaDDH = "";

                      foreach (var item in listBuyKH)
                      {
                          MaDDH = item.MaDDH;

                      }

                  }
                 var MaSP = item.getAttribute("data-js");

                 if (listItem) {

                     $.ajax({
                         type: "POST",
                         url: "/Home/XoaSanPham",
                        data: JSON.stringify({ maDDH: "@MaDDH", maSP: MaSP }),
                         contentType: "application/json; charset=utf-8",
                         dataType: "json",
                         success: function (result) {
                                 alert(result.message);
                             }
                     });
                     listItem.remove();
                     quantityBoughtProduct = boughtLists.children.length;
                     quatityBoughtList.textContent = quantityBoughtProduct;
                     if (quantityBoughtProduct === 0) {
                         parentElement.classList.remove("active");
                         noBought.classList.add("active");
                     }
                 }
             });
         });
        </script>

    }
    @RenderSection("Script", false)


</body>
</html>
