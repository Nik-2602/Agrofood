@model IEnumerable<THNN.Models.NhaCungCap>


@{
    ViewBag.Title = "Danh sách nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}

<main>
    <section class="service_section">
        <div class="container">

            <h2>Danh sách nhà cung cấp</h2>

            <p>
                <a href="~/Admin/NhaCungCap/ThemMoiNCC">Thêm mới</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        Mã Nhà Cung Cấp
                    </th>
                    <th>
                        Tên Nhà Cung Cấp
                    </th>
                    <th>
                        Địa Chỉ
                    </th>
                    <th>
                        Điện Thoại
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoai)
                        </td>
                        <td>
                            @Html.ActionLink("Cập nhật", "CapNhatNCC", new { id = item.MaNCC }) |
                            @Html.ActionLink("Xóa", "XoaNCC", new { id = item.MaNCC })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</main>

