
@model THNN.Models.ChuongTrinhGG

@{
    ViewBag.Title = "Cập Nhật Chương Trình Giảm Giá";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}

<main>
    <section class="service_section">
        <div class="container">

            <h2>Cập Nhật</h2>

            @using (Html.BeginForm("CapNhatCTGG", "ChuongTrinhKhuyenMai", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Chương Trình Giảm Giá</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.MaCT, "Mã CT", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaCT, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                    @Html.ValidationMessageFor(model => model.MaCT, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.TenSuKien, "Tên Sự Kiện", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenSuKien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSuKien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThoiGianBD, "Thời Gian Bắt Đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{
                            DateTime? specificDate = Model.ThoiGianBD;
                            string formattedDate = specificDate?.ToString("yyyy-MM-dd");
                            <input class="form-control" name="ThoiGianBD" value="@formattedDate" type="date" />
                     }


                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThoiGianKT, "Thời Gian Kết Thúc", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{

                        

                            DateTime? specificDate1 = Model.ThoiGianKT;
                            string formattedDate1 = specificDate1?.ToString("yyyy-MM-dd");
                            <input class="form-control" name="ThoiGianKT" value="@formattedDate1" type="date" />
                        


                    }
                </div>
            </div>

         

            <div class="form-group">
                @Html.LabelFor(model => model.PhanTram, "Phần Trăm", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhanTram, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhanTram, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThongTinSuKien, "Thông Tin Sự Kiện", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThongTinSuKien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThongTinSuKien, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Hình ảnh</label>
                <div class="col-md-10">
                    <img style="width:50px;height:40px" src="@Model.Poster" alt="">
                    <label for="labelFileAnh"> Thay đổi ảnh</label>
                    <input type="file" name="fileAnh" id="labelFileAnh" style="display: none;">
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
            }

            <div>
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </section>
</main>

